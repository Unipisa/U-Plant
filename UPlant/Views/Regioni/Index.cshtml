@model IEnumerable<UPlant.Models.DB.Regioni>
@inject LanguageService language
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @language.Getkey("Global_Description")
            </th>
            <th>
                @language.Getkey("Global_English_Description")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.descrizione)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descrizione_en)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.codice">@language.Getkey("Global_Edit")</a> |
                <a asp-action="Details" asp-route-id="@item.codice">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.codice">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
