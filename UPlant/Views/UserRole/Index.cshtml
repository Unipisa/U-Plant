@model IEnumerable<UPlant.Models.DB.UserRole>
@inject LanguageService language
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @language.Getkey("Global_Role")
            </th>
            <th>
                Utente
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleFKNavigation.Descr)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.UserFKNavigation.Name) @Html.DisplayFor(modelItem => item.UserFKNavigation.LastName)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">@language.Getkey("Global_Edit")</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
