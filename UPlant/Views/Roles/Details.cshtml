@model UPlant.Models.DB.Roles
@inject LanguageService language
@{
    ViewData["Title"] = "Details";
}

<div class="card card-outline card-primary">
    <div class="card-header with-border">
        <h3 class="card-title">@language.Getkey("Global_Detail")  @language.Getkey("Global_Role")</h3>
    </div>

    <div class="col-md-12">
   
    <dl class="row">
        <dt class = "col-sm-2">
                @language.Getkey("Global_Description")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descr)
        </dd>
    </dl>
</div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-success">@language.Getkey("Global_Edit")</a>
    <a asp-action="Index" class="btn btn-secondary">@language.Getkey("Global_Go_Back")</a>
</div>

