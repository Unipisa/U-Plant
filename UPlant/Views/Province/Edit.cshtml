@model UPlant.Models.DB.Province
@inject LanguageService language
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Province</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="codice" />
            <div class="form-group">
                <label asp-for="regione" class="control-label"></label>
                <select asp-for="regione" class="form-control" asp-items="ViewBag.regione"></select>
                <span asp-validation-for="regione" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="descrizione" class="control-label">@language.Getkey("Global_Description")</label>
                <input asp-for="descrizione" class="form-control" />
                <span asp-validation-for="descrizione" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="descrizione_en" class="control-label">@language.Getkey("Global_English_Description")</label>
                <input asp-for="descrizione_en" class="form-control" />
                <span asp-validation-for="descrizione_en" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
