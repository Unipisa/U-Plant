@model UPlant.Models.DB.Roles
@inject LanguageService language
@{
    ViewData["Title"] = "Delete";
}

<div class="card card-outline card-primary">
    <div class="card-header with-border">
        <h3 class="card-title">@language.Getkey("Global_Delete") @language.Getkey("Global_Role")</h3>
    </div>
    <dl class="row m-3 col-sm-6  ">
        <dt class="col-sm-2 ">
            @language.Getkey("Global_Description")
        </dt>
        <dd class = "col-sm-3">
            @Html.DisplayFor(model => model.Descr)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@language.Getkey("Global_Delete")" class="btn btn-danger m-3" />
    </form>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">@language.Getkey("Global_Go_Back")</a>

</div>