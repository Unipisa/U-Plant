@model UPlant.Models.DB.Collezioni
@inject LanguageService language
@{
    ViewData["Title"] = "Delete";
}

<div class="card card-outline card-primary">
<div class="card-header with-border">
        <h3 class="card-title">@language.Getkey("Global_Delete") @language.Getkey("Global_Collection") - @language.Getkey("Global_Question_Delete") @language.Getkey("Global_Collection")?</h3>
</div>
<div class="card-body">
    <dl class="row">
        <dt class = "col-sm-2">
                @language.Getkey("Global_Collection")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.collezione)
        </dd>
        <dt class = "col-sm-2">
                @language.Getkey("Global_Collection_In_English")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.collezione_en)
        </dd>
        <dt class="col-sm-2">
                @language.Getkey("Global_Sector")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.settoreNavigation.settore)
        </dd>
        <dt class = "col-sm-2">
                @language.Getkey("Global_Organization")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.organizzazioneNavigation.descrizione)
        </dd>
        
    </dl><p>
        <form asp-action="Delete">
            <input type="hidden" asp-for="id" />
                <input type="submit" value="@language.Getkey("Global_Delete")" class="btn btn-danger" />
        </form>
    </p>
</div>


</div>
<div>
    <a asp-action="Index" class="btn btn-info">@language.Getkey("Global_Go_Back")</a>

</div>