@model UPlant.Models.DB.Percorsi
@{
    ViewBag.Title = "Percorsi";
}
<div class="row">
    <div class="col-sm-12">


        <button type="button" id="torna" class="btn btn-info btn-xs" onclick="window.location.href = '@Url.Action("Index", "Percorsi")';">
            Torna Indietro
        </button>
    </div>
</div>

<div class="row">
	<div class="col-md-6">
		<div class="box box-primary">
			<div class="box-header with-border">
				<h3 class="box-title">Aggiungi</h3>
            </div>
			@using (Html.BeginForm()) 
			{
				@Html.AntiForgeryToken()
        <div class="box-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <b>Titolo</b><br>
                <input type="text" id="titolo" name="titolo" />
                @Html.ValidationMessageFor(model => model.titolo, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                        <b>Descrizione</b><br>
                <textarea id="descrizione" name="descrizione" rows="10" cols="80"></textarea>
                <br />Caratteri da aggiungere al testo : [br]ritorno a capo - [p] nuovo paragrafo

                @Html.ValidationMessageFor(model => model.descrizione, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                        <b>Titolo Inglese</b><br>
                <input type="text" id="titolo_en" name="titolo_en" />

                @Html.ValidationMessageFor(model => model.titolo_en, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                        <b>Descrizione Inglese</b><br>
                <textarea id="descrizione_en" name="descrizione_en" rows="10" cols="80"></textarea>
                        <br />Caratteri da aggiungere al testo : [br]ritorno a capo - [p] nuovo paragrafo

                @Html.ValidationMessageFor(model => model.descrizione_en, "", new { @class = "text-danger" })
            </div>



            <div class="form-group">
                <div class="col-md-offset-0">
                    <input type="submit" value="Aggiungi" class="btn btn-success" />
                </div>
            </div>


        </div>

			}

		</div>
	</div>
</div>



@section Scripts {
    @{
        <script src="~/js/select2.min.js"></script>
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


}
@section CustomScripts {
    <script type="text/javascript">
        cript >
            jQuery(function () {
                jQuery(".datepicker").datepicker({
                    language: "it",
                    autoclose: true
                });
            });
    </script>
}
