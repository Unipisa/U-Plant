@model IEnumerable<UPlant.Models.DB.Areali>

@{
    ViewData["Title"] = "Index";
}
<div class="card card-outline card-primary">
    <div class="card-header with-border">
        <h1 class="card-title">Elenco</h1>
        @{

            if (User.IsInRole("Administrator"))
            {
                <div class="float-right success ">
                    <a asp-action="Create">
                        <span class="btn btn-success" title="Aggiungi Areale">
                            Aggiungi Areale
                        </span>
                    </a>


                </div>
            }
        }
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="table1" class="table table-bordered table-striped dataTable">
    <thead>
        <tr>
            <th>
               Descrizione
            </th>
            <th>
               Codice Interno
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.descrizione)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.codiceInterno)
            </td>
            <td>
                @if (User.IsInRole("Administrator"))
                {

                    <a asp-action="Edit" asp-route-id="@item.id">
                        <span class="btn btn-warning btn-xs" title="Modifica Areale">
                                            <i class="fa-solid fa-pencil" style="color: #fafafa;"></i>
                        </span>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.id">
                        <span class="btn btn-danger btn-xs" title="Cancella Areale">
                            <i class="fa-solid fa-trash"></i>
                        </span>
                    </a>

                }
            </td>
        </tr>
}
    </tbody>
</table>
        </div>
    </div>


</div>
@section Styles {
    <link href="~/css/select2.min.css" rel="stylesheet" />
    <link href="~/css/accessioni.min.css" rel="stylesheet" />
    <link href="~/css/datatables.min.css" rel="stylesheet" />
}



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/datatables.min.js"></script>
}


@section CustomScripts {
    <script>
        jQuery(function () {
            jQuery('#table1').DataTable({
              'paging'      : true,
              'lengthChange': true,
              'searching'   : true,
              'ordering'    : true,
              'info'        : true,
              'autoWidth'   : false
            })
          })
    </script>
}         