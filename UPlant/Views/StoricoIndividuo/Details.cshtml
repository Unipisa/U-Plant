@model UPlant.Models.DB.StoricoIndividuo
@inject LanguageService language
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@language.Getkey("Global_Historical") @language.Getkey("Global_Individual")</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @language.Getkey("Global_Horticultural_Operations")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.operazioniColturali)
        </dd>
        <dt class = "col-sm-2">
            @language.Getkey("Global_Entry_Date")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.dataInserimento)
        </dd>
        <dt class = "col-sm-2">
            @Html.Label(@language.Getkey("Global_Condition"))
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.condizioneNavigation.condizione)
        </dd>
        <dt class = "col-sm-2">
            @language.Getkey("Global_Progressive")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.individuoNavigation.progressivo)
        </dd>
        <dt class = "col-sm-2">
            @language.Getkey("Global_Individual_Status")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.statoIndividuoNavigation.stato)
        </dd>
        <dt class = "col-sm-2">
            @language.Getkey("Global_Created_By")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.utenteNavigation.CreatedBy)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
