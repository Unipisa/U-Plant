@model UPlant.Models.DB.Users
@inject LanguageService language
@{
    ViewData["Title"] = "Delete";
}

<div class="card card-outline card-primary">
    <div class="card-header with-border">
        <h3 class="card-title">@language.Getkey("Global_Delete") Utente</h3>
    </div>
    <div class="card-body">
    <dl class="row">
        <dt class = "col-sm-2">
                @language.Getkey("Global_Name")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
                @language.Getkey("Global_Surname")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
                @language.Getkey("Global_Email")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
                @language.Getkey("Global_Username")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UnipiUserName)
        </dd>
        <dt class = "col-sm-2">
                @language.Getkey("Global_Tax_Code")
        </dt>
        <dd class = "col-sm-10">
                @{
                    if ((Model.CF) == null || (Model.CF) == "")
                    {
                        <span>Campo Vuoto</span>
                    }
                    else
                    {
                        @Html.DisplayFor(model => model.CF)
                    }
                }
                @Html.DisplayFor(model => model.CF)
        </dd>
        <dt class = "col-sm-2">
                @language.Getkey("Global_Enabled")
        </dt>
        <dd class = "col-sm-10">
            @{
                    if (Model.IsEnabled)
                    {
                        <span>SI </span>
                    }
                    else
                    {
                        <span>NO </span>
                    }
            } 
           
        </dd>
        <dt class = "col-sm-2">
                @language.Getkey("Global_Created_At")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class = "col-sm-2">
                @language.Getkey("Global_Created_By")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedBy)
        </dd>
       
        <dt class = "col-sm-2">
                @language.Getkey("Global_Organization")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrganizzazioneNavigation.descrizione)
        </dd>
        </dl><p >
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
                <input type="submit" value="@language.Getkey("Global_Delete")" class="btn btn-danger" />
        </form>
        </p >
    </div>

   
</div>
<div>
    <a asp-action="Index" class="btn btn-info">@language.Getkey("Global_Go_Back")</a>

</div>