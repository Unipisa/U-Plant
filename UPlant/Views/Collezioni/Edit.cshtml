@model UPlant.Models.DB.Collezioni
@inject LanguageService language
@{
    ViewData["Title"] = "Edit";
}
<div class="card card-outline card-primary">
    <div class="card-header with-border">
        <h3 class="card-title">@language.Getkey("Global_Edit") @language.Getkey("Global_Collection")</h3>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="collezione" class="control-label">@language.Getkey("Global_Collection")</label>
                <input asp-for="collezione" class="form-control" />
                <span asp-validation-for="collezione" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="collezione_en" class="control-label">@language.Getkey("Global_Collection_In_English")</label>
                <input asp-for="collezione_en" class="form-control" />
                <span asp-validation-for="collezione_en" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="settore" class="control-label">@language.Getkey("Global_Sector")</label>
                <select asp-for="settore" class="form-control" asp-items="ViewBag.settore"></select>
                <span asp-validation-for="settore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="organizzazione" class="control-label">@language.Getkey("Global_Organization")</label>
                <select asp-for="organizzazione" class="form-control" asp-items="ViewBag.organizzazione"></select>
                <span asp-validation-for="organizzazione" class="text-danger"></span>
            </div>
            
            
            <div class="form-group">
                <input type="submit" value="@language.Getkey("Global_Save")" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink(@language.Getkey("Global_Go_Back"), null, null, null, new { @class = "btn btn-info go_back" })
</div>
@section Styles {
    <link href="~/css/select2.min.css" rel="stylesheet" />
    <link href="~/css/accessioni.min.css" rel="stylesheet" />

}



@section Scripts {
    @{
        <script src="~/js/select2.min.js"></script>
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


}
@section CustomScripts {
    <script type="text/javascript">
        $(function () {
            $('.go_back').click(function (e) {
                e.preventDefault();
                history.go(-1);
            });
        });
    </script>
}