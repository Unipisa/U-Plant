@model UPlant.Models.DB.Famiglie
@inject LanguageService language
@{
    ViewData["Title"] = "Create";
}
<div class="card card-outline card-primary">
    <div class="card-header with-border">
        <h3 class="card-title">Aggiungi Famiglia</h3>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="descrizione" class="control-label">Descrizione</label>
                <input asp-for="descrizione" class="form-control" />
                <span asp-validation-for="descrizione" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="descrizione_en" class="control-label">Descrizione in Inglese</label>
                <input asp-for="descrizione_en" class="form-control" />
                <span asp-validation-for="descrizione_en" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crea" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

    <div>
    @Html.ActionLink(@language.Getkey("Global_Go_Back"), null, null, null, new { @class = "btn btn-info go_back" })
    </div>


    @section Styles {
        <link href="~/css/select2.min.css" rel="stylesheet" />
        <link href="~/css/accessioni.min.css" rel="stylesheet" />

    }



    @section Scripts {
        @{
            <script src="~/js/select2.min.js"></script>
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }


    }
    @section CustomScripts {
        <script type="text/javascript">
            $(function () {
                $('.go_back').click(function (e) {
                    e.preventDefault();
                    history.go(-1);
                });
            });
        </script>
    }
