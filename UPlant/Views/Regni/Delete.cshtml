@model UPlant.Models.DB.Regni
@inject LanguageService language
@{
    ViewData["Title"] = "Delete";
}
<div class="card card-outline card-primary">
    <div class="card-header with-border">
        <h3 class="card-title">@language.Getkey("Global_Delete") @language.Getkey("Global_Floristic_Kingdom") - @language.Getkey("Global_Question_Delete") @language.Getkey("Global_Floristic_Kingdom")?</h3>
    </div>
    <div class="card-body">
    <dl class="row">
        <dt class = "col-sm-2">
           Descrizione
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.descrizione)
        </dd>
        <dt class="col-sm-2">
             Descrizione in Inglese
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.descrizione_en)
        </dd>
        <dt class = "col-sm-2">
               Codice Interno
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.codiceInterno)
        </dd>

        </dl><p>
            <form asp-action="Delete">
                <input type="hidden" asp-for="id" />
                <input type="submit" value="Cancella" class="btn btn-danger" />
            </form>
        </p>
    </div>


</div>
<div>
    <a asp-action="Index" class="btn btn-info">@language.Getkey("Global_Go_Back")</a>

</div>