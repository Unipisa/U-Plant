@model UPlant.Models.DB.Collezioni
@inject LanguageService language
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@language.Getkey("Global_Collection")</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @language.Getkey("Global_Collection")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.collezione)
        </dd>
        <dt class = "col-sm-2">
            @language.Getkey("Global_Collection_In_English")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.collezione_en)
        </dd>
        <dt class = "col-sm-2">
            @language.Getkey("Global_Organization")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.organizzazioneNavigation.descrizione)
        </dd>
        <dt class = "col-sm-2">
            @language.Getkey("Global_Sector")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.settoreNavigation.settore)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.id">@language.Getkey("Global_Edit")</a> |
    <a asp-action="Index">Back to List</a>
</div>
