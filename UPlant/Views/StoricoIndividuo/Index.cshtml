@model IEnumerable<UPlant.Models.DB.StoricoIndividuo>
@inject LanguageService language
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @language.Getkey("Global_Horticultural_Operations")
            </th>
            <th>
                @language.Getkey("Global_Entry_Date")
            </th>
            <th>
                @language.Getkey("Global_Condition")
            </th>
            <th>
                @language.Getkey("Global_Progressive")
            </th>
            <th>
                @language.Getkey("Global_Individual_Status")
            </th>
            <th>
                @language.Getkey("Global_Created_By")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.operazioniColturali)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dataInserimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.condizioneNavigation.condizione)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.individuoNavigation.progressivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.statoIndividuoNavigation.stato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.utenteNavigation.CreatedBy)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.id">@language.Getkey("Global_Edit")</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
