@model IEnumerable<UPlant.Models.DB.Percorsi>
@inject LanguageService language
@{
    
    ViewBag.Title = "Upload " + @language.Getkey("Global_Image") + " " + @language.Getkey("Global_Thematic_Visits");
}
<div class="container">
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" style="background-color: #3c8dbc; ">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModal-label" style="color: azure">Upload @language.Getkey("Global_Image") @language.Getkey("Global_Thematic_Visits")</h4>
                </div>
                <div class="modal-body">


                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success alert-dismissible" style="margin-top:20px">
                            @ViewBag.Message
                        </div>
                    }
                    @using (Html.BeginForm("UploadImg", "Percorsi", FormMethod.Post, new
                    {
                        enctype = "multipart/form-data",
                        @id = "upimma",
                        onsubmit = "return validateForm(this);"
                    }))
                    {
                        @Html.AntiForgeryToken()




                        <input type="hidden" autocomplete="off" name="id" value="@ViewBag.idpercorso" required />
                        
                        <label id="errore" class="alert-danger" style="display:none"></label>
                        <input type="file" name="files" multiple required />
                        
                        
                        <br />
                        <input type="text" name="credits" placeholder="@language.Getkey("Global_Credits")" />
                        <br />
                        <input type="submit" value="@language.Getkey("Global_Add")" class="btn btn-default" />



                    }





                </div>


            </div>
        </div>
    </div>
</div>